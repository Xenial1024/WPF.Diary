<mah:MetroWindow x:Class="Diary.Views.DbSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Diary"
        mc:Ignorable="d"
        Title="Ustawienia bazy danych" 
        Height="301" 
        Width="660"
        MinWidth="400" 
        MinHeight="285"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label 
            Content="Adres serwera:"/>
        <TextBox 
            Name="tbServerAddress"
            Text="{Binding ServerAddress,
            Mode=TwoWay, 
            UpdateSourceTrigger=PropertyChanged,
            ValidatesOnDataErrors=True}"
            Grid.Column="1"/>
        <Button
            Content="Resetuj"
            Grid.Column="2" 
            Command="{Binding ResetServerAddressCommand}" Click="Reset_tbServerAddress"/>

        <Label 
            Content="Nazwa serwera:"
            Grid.Row="1" />
        <TextBox 
            Name="tbServerName"
            Text="{Binding ServerName,
            Mode=TwoWay, 
            UpdateSourceTrigger=PropertyChanged,
            ValidatesOnDataErrors=True}"
            Grid.Column="1"
            Grid.Row="1"/>
        <Button
            Content="Resetuj"
            Grid.Row="1"
            Grid.Column="2"
            Command="{Binding ResetServerNameCommand}" 
            Click="Reset_tbServerName"/>
        <Label 
            Content="Nazwa bazy danych:"
            Grid.Row="2"/>
        <TextBox 
            Name="tbDatabaseName"
            Text="{Binding DatabaseName,
            Mode=TwoWay, 
            UpdateSourceTrigger=PropertyChanged,
            ValidatesOnDataErrors=True}"
            Grid.Column="1"
            Grid.Row="2"/>
        <Button
            Content="Resetuj"
            Grid.Row="2"
            Grid.Column="2"
            Command="{Binding ResetDatabaseNameCommand}" Click="Reset_tbDatabaseName"/>
        <Label 
            Content="Login:"
            Grid.Row="3"/>
        <TextBox 
            Name="tbUsername"
            Text="{Binding Username,
            Mode=TwoWay, 
            UpdateSourceTrigger=PropertyChanged,
            ValidatesOnDataErrors=True}"
            IsEnabled="{Binding AreUsernameAndPasswordEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="3" />
        <Label 
            Content="Hasło:"
            Grid.Row="4"/>
        <TextBox 
            Name="tbPassword"
            Text="{Binding Password,
            Mode=TwoWay, 
            UpdateSourceTrigger=PropertyChanged,
            ValidatesOnDataErrors=True}"
            IsEnabled="{Binding AreUsernameAndPasswordEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="4"/>
        <Label 
            Content="Użyj poświadczeń zalogowanego użytkownika systemu:"
            Grid.Row="5"
            Grid.ColumnSpan="3"
            VerticalAlignment="Center"/>
        <CheckBox
            Grid.Column="1"
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="215,0,0,0"
            VerticalAlignment="Center"
            IsChecked="{Binding AreSystemCredentialsUsed, 
            Mode=TwoWay}" 
            Click="EnableOrDisableUsernameAndPasswordTextBoxes"
            />
        <Button 
            Grid.Column="1" 
            Grid.Row="6"
            Command="{Binding CloseCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
            Content="Anuluj" 
            HorizontalAlignment="Right"/>
        <Button 
            Grid.Column="2"
            Grid.Row="6"
            Command="{Binding ConfirmCommand}" 
            Content="Zatwierdź" 
            HorizontalAlignment="Center"/>
    </Grid>
</mah:MetroWindow>
